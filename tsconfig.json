{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",

    "paths": {
      // Roots
      "@RootComponents/*": ["root.components/*"],
      "@RootFeatures/*": ["root.features/*"],
      "@RootHooks/*": ["root.hooks/*"],
      "@RootLayouts/*": ["root.layouts/*"],
      "@RootLibs/*": ["root.libs/*"],
      "@RootStyles/*": ["root.styles/*"]
    }
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
